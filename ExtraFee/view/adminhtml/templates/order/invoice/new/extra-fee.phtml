    <div id="mp_extra_fee_shipment" style="margin-top: 20px">
        <div class="admin__page-section-item-title">
            <span class="title"><?= $block->escapeHtml(__('Extra Fee Information')) ?></span>
        </div>
        <div class="admin__page-section-item-content">
