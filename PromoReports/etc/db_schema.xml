<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
  <table name="amasty_ampromo_daily_reports" resource="default" engine="innodb" comment="amasty_ampromo_daily_reports">
    <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Id"/>
    <column xsi:type="smallint" name="store_id" padding="6" unsigned="false" nullable="false" identity="false" default="0" comment="Store_id"/>
    <column xsi:type="smallint" name="customer_group_id" padding="6" unsigned="false" nullable="false" identity="false" default="0" comment="Customer_group_id"/>
    <column xsi:type="date" name="period" comment="Period"/>
    <column xsi:type="decimal" name="total_sales_with_promo" scale="4" precision="12" unsigned="false" nullable="false" default="0" comment="Total_sales_with_promo"/>
    <column xsi:type="smallint" name="orders_count_with_promo" padding="6" unsigned="false" nullable="false" identity="false" default="0" comment="Orders_count_with_promo"/>
    <column xsi:type="decimal" name="average_total_with_promo" scale="4" precision="12" unsigned="false" nullable="false" default="0" comment="Average_total_with_promo"/>
    <column xsi:type="decimal" name="average_total_without_promo" scale="4" precision="12" unsigned="false" nullable="false" default="0" comment="Average_total_without_promo"/>
    <column xsi:type="decimal" name="items_per_order" scale="4" precision="12" unsigned="false" nullable="false" default="0" comment="Items_per_order"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="id"/>
    </constraint>
  </table>
</schema>
